\begin_inset Formula 
\begin{equation}
p_{1}=p_{i}-1,151\frac{C_{2}qB\mu}{kh}\left[0,8686p_{wD}\left(t_{pD}\right)-\log\left(\frac{4C_{1}k}{e^{\gamma}\phi\mu c_{t}r_{w}^{2}}\right)-0,8686s\right].\label{eq:defp1}
